{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container-inscription">
    <h1 class="title">Réinitialisation du mot de passe</h1>
    {{ form_start(resetForm, { 'attr': {'class': 'password-reset-form'} }) }}
        <div class="user-details">
            {{ form_row(resetForm.plainPassword) }}
        </div>
        <div class="button">
            <input type="submit" class="btn-custom" value="Réinitialiser le mot de passe">
        </div>
    {{ form_end(resetForm) }}
</div>
{% endblock %}
